<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             xmlns:drawable="clr-namespace:Cooop365ML"
             x:Class="Cooop365ML.MainPage">
    <ContentPage.Resources>
        <drawable:GraphicsDrawable x:Key="drawable" />
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Fill"
            HorizontalOptions="Fill">
            

            <cv:CameraView x:Name="cameraView" WidthRequest="300" HeightRequest="200"
                           CamerasLoaded="cameraView_CamerasLoaded"/>

            <Button Text="Take picture" Clicked="Button_Clicked"/>
            <Image x:Name="myImage" WidthRequest="300" HeightRequest="200"></Image>

            <GraphicsView  Drawable="{StaticResource drawable}"
                HeightRequest="500"
                WidthRequest="500" />

    </VerticalStackLayout>
    </ScrollView>

</ContentPage>
