<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="Cooop365ML.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Fill"
            HorizontalOptions="Fill">
            

            <cv:CameraView x:Name="cameraView" WidthRequest="300" HeightRequest="200"
                           CamerasLoaded="cameraView_CamerasLoaded"/>

            <Button CornerRadius="60" HeightRequest="110" WidthRequest="110" BorderWidth="2" Margin="0,150,0,0" Text="Take picture" Clicked="Button_Clicked"/>
            <Image x:Name="myImage" WidthRequest="300" HeightRequest="200"></Image>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
